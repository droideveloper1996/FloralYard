<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="nursery.floralyard.com.floralyard.IntroActivity">


    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/loadingIndi"
        android:layout_width="50dp"

        android:layout_height="50dp"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/floralYard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loadingIndi"
        android:textColor="#f9f9f9"
        android:layout_centerHorizontal="true"
        android:text="Floral Yard"
        android:textSize="56sp"/>

    <ImageView
        android:id="@+id/logo_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/floralYard"
        android:layout_centerHorizontal="true"
        android:alpha="0"
        android:src="@drawable/logo"/>
</RelativeLayout>
